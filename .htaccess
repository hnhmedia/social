# Enable Rewrite Engine
RewriteEngine On
RewriteBase /sgi/

# Force HTTPS (optional - uncomment if you want)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Clean Order URLs: /order/100IGF/ -> order.php?id=100IGF
RewriteRule ^order/([0-9]+[A-Z]+)/?$ order.php?id=$1 [L,QSA]

# Service detail pages: /buy-instagram-followers
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-z0-9\-]+)$ index.php?p=$1 [L,QSA]

# API endpoints
RewriteRule ^api/(.*)$ api/$1 [L]

# Block access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Custom error pages (optional)
# ErrorDocument 404 /sgi/404.php
# ErrorDocument 500 /sgi/500.php
