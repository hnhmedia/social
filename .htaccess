# Enable Rewrite Engine
RewriteEngine On

# Base directory
RewriteBase /sgi/

# Prevent direct access to modules folder
RewriteRule ^modules/ - [F,L]

# Allow existing files & folders
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# SEO friendly URLs
# /about-us  â†’ index.php?p=about-us
RewriteRule ^([a-zA-Z0-9-]+)/?$ index.php?p=$1 [L,QSA]

# Default home page
RewriteRule ^$ index.php [L]
