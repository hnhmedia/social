# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_URL=https://betabd.zodiaccdn.com/sgi

# Site Configuration
SITE_NAME=SocialIG
SITE_TITLE="SocialIG - Social Media Growth Services"
ADMIN_EMAIL=admin@socialig.com
SUPPORT_EMAIL=support@socialig.com

# Database Configuration
DB_HOST=10.10.20.3
DB_PORT=3306
DB_NAME=social
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here
DB_PREFIX=si_
DB_CHARSET=utf8mb4

# SMTP Email Configuration
SMTP_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_ENCRYPTION=tls
SMTP_FROM_EMAIL=noreply@socialig.com
SMTP_FROM_NAME=SocialIG

# Payment Gateway
PAYMENT_GATEWAY_URL=http://hnh-media.com/pg.php
PAYMENT_API_KEY=your_payment_api_key_here
PAYMENT_MERCHANT_ID=your_merchant_id_here

# Security Settings
SESSION_LIFETIME=7200
CSRF_TOKEN_EXPIRE=3600
MAX_LOGIN_ATTEMPTS=5

# Google reCAPTCHA (Optional)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# API Keys (if using external services)
GOOGLE_TRANSLATE_API_KEY=
GOOGLE_ANALYTICS_ID=

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf
